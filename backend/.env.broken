# YSI Catalyst Backend Environment Configuration

# Database Configuration
DATABASE_URL=postgresql://ysi_user:ysi_password@localhost:5432/ysi_db

# Security
SECRET_KEY=ysi-catalyst-development-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=43200

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here

# API Configuration
API_V1_STR=/api/v1

# CORS Origins (for frontend integration)
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:3001","http://localhost:8000","http://localhost"]

# Redis Configuration (optional)
REDIS_URL=redis://localhost:6379/0

# Application Settings
PROJECT_NAME=YSI Catalyst
LOG_LEVEL=INFO

# Development/Production Mode
ENVIRONMENT=development

# RAG System Configuration
MAX_EMBEDDING_BATCH_SIZE=10
VECTOR_SIMILARITY_THRESHOLD=0.7
MAX_TOKENS_PER_CHUNK=1000
CHUNK_OVERLAP_TOKENS=100

# Cost Monitoring Thresholds
DAILY_TOKEN_LIMIT=1000000
COST_ALERT_THRESHOLD_USD=10.0

# File Upload Configuration
MAX_FILE_SIZE_MB=50
ALLOWED_FILE_TYPES=.txt,.json,.csv,.pdf

# Database Connection Pool
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30RAGFLOW_ENABLED=true
RAGFLOW_TIMEOUT=30
RAGFLOW_MAX_RETRIES=3
RAGFLOW_CHUNK_SIZE=512
RAGFLOW_OVERLAP=50
