# YSI Backend Production Environment Configuration Template

# Database Configuration
POSTGRES_DB=ysi_db
POSTGRES_USER=ysi_user
POSTGRES_PASSWORD=ysi_password_change_in_production
POSTGRES_PORT=5432

# Backend Configuration
BACKEND_PORT=8000
SECRET_KEY=ysi-production-secret-key-change-in-production

# RAGFlow Configuration (set these values from setup scripts)
RAGFLOW_API_URL=http://localhost:9380
RAGFLOW_WEB_URL=http://localhost:9381
RAGFLOW_API_TOKEN=your-ragflow-token-here
RAGFLOW_TENANT_ID=your-tenant-id-here
RAGFLOW_ENABLED=true

# RAGFlow Advanced Settings
RAGFLOW_TIMEOUT=30
RAGFLOW_MAX_RETRIES=3
RAGFLOW_CHUNK_SIZE=512
RAGFLOW_OVERLAP=50

# Security
DEBUG=false
LOG_LEVEL=INFO
